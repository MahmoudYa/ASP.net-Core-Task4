@model IEnumerable<REAL_Estate.Objects.Models.Filee>
@{
    ViewBag.Title = "Manage Files";
}

<h2>Manage Files</h2>

<table class="table">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.FileName</td>
                <td>
                    <a asp-action="DeleteFile" asp-route-id="@file.Id" class="btn btn-danger btn-sm">Delete</a>
                    <a href="~/uploads/@System.IO.Path.GetFileName(file.FilePath)" target="_blank" class="btn btn-primary btn-sm">View</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Upload New Files</h3>
<form asp-action="UploadFiles" method="post" enctype="multipart/form-data">
    <input type="hidden" name="propertyId" value="@ViewBag.PropertyId" />
    <div>
        <label>Upload Files</label>
        <input type="file" name="files" multiple class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
    <button asp-action="Index" class="btn btn-secondary">Cancel</button>
</form>
